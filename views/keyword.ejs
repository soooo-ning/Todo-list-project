<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>키워드 조회 페이지</title>
    <link rel="stylesheet" href="../static/css/keyword.css" />
  </head>
  <body>
    <div class="container">
      <h1 class="title">키워드</h1>
      <div class="card-container">
        <div class="card" id="sampleCard">
          <div class="card-title"></div>
          <ul class="todo-list">
            <li></li>
            <li class="completed"></li>
            <li></li>
          </ul>
          <!-- <form method="" action="">
            <input type="hidden" name="title" value="" />
          </form> -->
        </div>
      </div>
    </div>

    <script>
      // 예시 데이터
      const data = [
        {
          id: 1,
          title: '공부',
          todos: [
            { id: 101, task: '과제', completed: false },
            { id: 102, task: 'Velog', completed: true },
            { id: 103, task: '조별 과제', completed: false },
          ],
        },
        {
          id: 2,
          title: '운동',
          todos: [
            { id: 201, task: 'Squat 20번', completed: true },
            { id: 202, task: '30분 전국의 계단', completed: true },
            { id: 203, task: '스트레칭', completed: false },
          ],
        },
        {
          id: 3,
          title: '장보기',
          todos: [
            { id: 301, task: '당근', completed: false },
            { id: 302, task: '고구마', completed: true },
            { id: 303, task: '버섯', completed: false },
            { id: 304, task: '호추', completed: false },
          ],
        },
        {
          id: 4,
          title: '여행',
          todos: [
            { id: 401, task: '숙소', completed: true },
            { id: 402, task: '비행기', completed: false },
            { id: 403, task: '짐', completed: false },
          ],
        },
      ];

      // DOM
      function renderData(data) {
        const container = document.querySelector('.card-container');

        container.innerHTML = '';

        data.forEach((item) => {
          // 카드 생성
          const card = document.createElement('div');
          card.className = 'card';

          // 타이틀 추가
          const title = document.createElement('div');
          title.className = 'card-title';
          title.textContent = item.title;
          card.appendChild(title);

          // 투두리스트 추가
          const todoList = document.createElement('ul');
          todoList.className = 'todo-list';

          item.todos.forEach((todo) => {
            const todoItem = document.createElement('li');
            todoItem.textContent = todo.task;
            if (todo.completed) {
              todoItem.classList.add('completed');
            }
            todoList.appendChild(todoItem);
          });

          card.appendChild(todoList);
          container.appendChild(card);
        });
      }

      document.addEventListener('DOMContentLoaded', () => renderData(data));
    </script>
  </body>
</html>
